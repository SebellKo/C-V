{
  "manifest_version": 3,
  "name": "C:V",
  "description": "Multi Copy/Paste",
  "version": "1.0",
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "contents/content.js",
        "contents/setCopyText.js",
        "contents/getCurrentListName.js",
        "contents/setCurrentListName.js"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon/icon-16.png",
      "32": "icon/icon-32.png",
      "48": "icon/icon-48.png",
      "128": "icon/icon-128.png"
    }
  },
  "permissions": ["scripting"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
